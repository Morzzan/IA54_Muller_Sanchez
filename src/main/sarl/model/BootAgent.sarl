package model

import io.sarl.core.DefaultContextInteractions
import io.sarl.core.Initialize
import io.sarl.core.Lifecycle
import io.sarl.core.Logging
import io.sarl.javafx.FxApplication
import view.Fx3DView

import static view.Fx3DView.*

/** 
 * @author morzzan
 * 
 */
agent BootAgent {
	uses Logging, Lifecycle, DefaultContextInteractions

	val nbdrones = 5

	on Initialize {
		info("The Boot agent was started.")
		spawn(typeof(EnvAgent), nbdrones)
		Fx3DView.sp= defaultSpace
		FxApplication.launch(Fx3DView, nbdrones.toString)
		killMe
	}	
}
